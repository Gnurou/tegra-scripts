#!/usr/bin/env bash

set -e

PACKAGE=weston

. scripts/env.sh

cd_package

mkdir -p m4
run_autogen \
--disable-rpi-compositor \
--enable-demo-clients-install \
--disable-wcap-tools \
$WESTON_CONFIG_DISTRO_OPTIONS

run_make
# Use fakeroot since a weston-launch is attempted to be root suid
fakeroot make DESTDIR=$SYSROOT install
# Fix permissions of weston-launch which was installed using fakeroot
sudo chown root $SYSROOT/$NV_PREFIX/bin/weston-launch
sudo chmod u+s $SYSROOT/$NV_PREFIX/bin/weston-launch

# Enable Xwayland in configuration
sudo mkdir -p $SYSROOT/etc/xdg/weston
cat <<EOF |sudo tee $SYSROOT/etc/xdg/weston/weston.ini >/dev/null
[core]
modules=xwayland.so

[xwayland]
path=/opt/nouveau/bin/Xwayland
EOF

package_success
